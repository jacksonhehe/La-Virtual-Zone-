datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  username      String         @unique
  password      String
  role          Role           @default(USER)
  clubs         Club[]         @relation("UserClubs")       // Un usuario puede tener varios clubes
  players       Player[]       @relation("UserPlayers")     // Un usuario puede tener varios jugadores
  refreshTokens RefreshToken[]
}

model Club {
  id        Int      @id @default(autoincrement())
  name      String
  manager   User?    @relation("UserClubs", fields: [managerId], references: [id])
  managerId Int?
  players   Player[] @relation("ClubPlayers")  // Relación con jugadores
  // Relaciones para los partidos (Match)
  homeMatches Match[] @relation("home")         // Club como local
  awayMatches Match[] @relation("away")         // Club como visitante
  // Relaciones para las transferencias
  fromTransfers Transfer[] @relation("from")    // Club que transfiere
  toTransfers   Transfer[] @relation("to")      // Club que recibe
}

model Player {
  id     Int   @id @default(autoincrement())
  name   String
  club   Club? @relation("ClubPlayers", fields: [clubId], references: [id])
  clubId Int?
  user   User? @relation("UserPlayers", fields: [userId], references: [id])
  userId Int?
  transfers Transfer[] // Relación con transferencias
}

model Match {
  id         Int      @id @default(autoincrement())
  homeClub   Club     @relation("home", fields: [homeClubId], references: [id])
  homeClubId Int
  awayClub   Club     @relation("away", fields: [awayClubId], references: [id])
  awayClubId Int
  playedAt   DateTime
}

model Transfer {
  id       Int    @id @default(autoincrement())
  player   Player @relation(fields: [playerId], references: [id])
  playerId Int
  from     Club   @relation("from", fields: [fromId], references: [id])
  fromId   Int
  to       Club   @relation("to", fields: [toId], references: [id])
  toId     Int
  amount   Int
  createdAt DateTime @default(now())
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  expiresAt DateTime
}

enum Role {
  ADMIN
  CLUB
  USER
}
